{
  "name": "hin-ru",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently -k -i --default-input-target server:start:dev \"npm:*:start:dev\"",
    "client:build:dev": "npm run clean && MODE=development ENTRIES=client webpack -c tools/webpack.config.ts",
    "client:build:prod": "npm run clean && ENTRIES=client webpack -c tools/webpack.config.ts",
    "firebase:deploy": "npm run client:build:prod && npm run firebase:generate-html && npm run firebase:copy-public && firebase deploy",
    "server:start:dev": "MODE=development nodemon --watch tools tools/dev-server.ts",
    "server:start:prod": "node -r ts-node/register/transpile-only server/index.ts",
    "prettify": "prettier './**/*.{ts,tsx,css}' --write",
    "lint": "eslint './**/*.{js,ts,tsx}'",
    "lint-fix": "eslint --fix './**/*.{js,ts,tsx}'",
    "serve": "firebase serve",
    "firebase:generate-html": "node -r ts-node/register/transpile-only tools/firebase/generate-html.ts",
    "firebase:copy-public": "cp -r public/** build/client",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@firebase/app": "^0.7.3",
    "@firebase/auth": "^0.18.2",
    "@firebase/firestore": "^3.1.0",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "dotenv": "8.2.0",
    "express": "^4.17.1",
    "history": "^5.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "^6.0.0-beta.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3",
    "use-async-effect": "^2.2.3"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@types/express": "^4.17.13",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@types/webpack-hot-middleware": "^2.25.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.3.0",
    "css-loader": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "react-refresh": "^0.10.0",
    "react-refresh-typescript": "^2.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.2.1",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-manifest-plugin": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
