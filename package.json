{
  "name": "hin-ru",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@firebase/app": "^0.7.3",
    "@firebase/auth": "^0.18.2",
    "@firebase/firestore": "^3.1.0",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "express": "^4.17.1",
    "history": "^5.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "^6.0.0-beta.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3",
    "use-async-effect": "^2.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-ascii": "1.0.0",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "concurrently -k -i --default-input-target server:start:dev \"npm:*:start:dev\"",
    "client:start:dev": "react-scripts start",
    "client:build": "react-scripts build",
    "firebase:deploy": "react-scripts build && firebase deploy",
    "eject": "react-scripts eject",
    "prettify": "prettier './**/*.{ts,tsx,css}' --write",
    "lint": "eslint './**/*.{js,ts,tsx}'",
    "lint-fix": "eslint --fix './**/*.{js,ts,tsx}'",
    "server:start:dev": "nodemon --watch src/ src/server/index.ts",
    "server:start:prod": "node -r ts-node/register/transpile-only src/server/index.ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
